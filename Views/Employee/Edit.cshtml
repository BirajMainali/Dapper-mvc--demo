@model DapperDemo.ViewModel.EmployeeVm

@{
    ViewBag.Title = "Edit";
    Layout = "_Layout";
}

<div class="card">
    <div class="card-header">
        <div class="card-title">
            Edit @Model.FirstName Info
        </div>
        <div class="card-body">
            <form asp-controller="Employee" asp-action="Edit" method="post">
                <div class="form-group mb-1">
                    <label asp-for="FirstName"></label>
                    <input type="text" asp-for="FirstName" class="form-control">
                </div>
                <div class="form-group mb-1">
                    <label asp-for="LastName"></label>
                    <input type="text" asp-for="LastName" class="form-control">
                </div>
                <div class="form-group mb-1">
                    <label asp-for="Age"></label>
                    <input type="number" asp-for="Age" class="form-control">
                </div>
                <div class="form-group mb-1">
                    <label asp-for="Salary"></label>
                    <input type="number" asp-for="Salary" class="form-control">
                </div>
                <div class="btn-group">
                    <button type="submit" class="btn btn-primary btn-sm"> Save</button>
                </div>
            </form>

        </div>
    </div>
</div>